<h2>{{model.question}}</h2>
<h4>Author: {{model.author}}</h4>

{{update-question question=model update="update"}}
{{delete-question question=model destroyQuestion="destroyQuestion"}}

<h3>Answers:</h3>

<p>Total answers: {{answerCount}}</p>

{{add-answer saveAnswer="saveAnswer" question=model}}

<ul>
  {{#each model.answers as |answer|}}
    {{answer-tile answer=answer}}
    {{log answer-tile}}
  {{/each}}
</ul>
